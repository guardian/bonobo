# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                      controllers.Application.showKeys(direction: String ?= "next", range: String ?= "")
GET         /keys                  controllers.Application.showKeys(direction: String ?= "next", range: String ?= "")
GET         /keys/search           controllers.Application.search

GET         /users/create          controllers.Application.createNewUserForm
POST        /users                 controllers.Application.createUser
GET         /users/:id/edit        controllers.Application.editUser(id: String)
POST        /users/:id             controllers.Application.updateUser(id: String)

GET         /keys/:id/edit         controllers.Application.editKey(id: String)
POST        /keys/:id              controllers.Application.updateKey(id: String)

GET         /healthcheck           controllers.Application.healthcheck

#Google Auth
GET         /login                 controllers.Auth.login
GET         /oauth2callback        controllers.Auth.oauth2Callback

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
