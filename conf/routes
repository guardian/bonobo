# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                          controllers.Application.showKeys(direction: String ?= "next", range: String ?= "")
GET         /key                       controllers.Application.showKeys(direction: String ?= "next", range: String ?= "")
GET         /key/search                controllers.Application.search

GET         /key/create/:userId        controllers.Application.createNewKeyForm(userId: String)
POST        /key/create/:userId        controllers.Application.createKey(userId: String)

GET         /key/:id/edit              controllers.Application.editKey(id: String)
POST        /key/:id                   controllers.Application.updateKey(id: String)

GET         /user/create               controllers.Application.createNewUserForm
POST        /user                      controllers.Application.createUser
GET         /user/:id/edit             controllers.Application.editUser(id: String)
POST        /user/:id                  controllers.Application.updateUser(id: String)

GET         /healthcheck               controllers.Application.healthcheck

#Google Auth
GET         /login                     controllers.Auth.login
GET         /oauth2callback            controllers.Auth.oauth2Callback

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
